<!DOCTYPE html>
<html>
  <head>
    <title>Project</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <%= "Signed In as #{current_user.email}" %> <%= link_to "Sign Out", destroy_user_session_path, :method => :delete, :style => "text-decoration:none" %>
    <% end %>
    <%= yield %>
  </body>
</html>
